            <!-- begin button 3 -->
            <mj-raw>
               <tr>
                 <td align="left" vertical-align="middle" style="font-size:0px;padding:10px 25px;word-break:break-word;">
                   <table border="0" cellpadding="0" cellspacing="0" role="presentation" style="border-collapse:separate;line-height:100%;">
                     <tr>
                       <td align="center" bgcolor="#00904b" role="presentation" style="border:none;border-radius:3px;cursor:auto;padding:11px 45px;background:#00904b;" valign="middle">
                         <a href="#" style="background:#00904b;color:#ffffff;font-family:Arial,Helvetica,sans-serif;font-size:14px;font-weight:normal;line-height:120%;Margin:0;text-decoration:none;text-transform:none;" target="_blank" pardot-region="button-3" pardot-region-type="link">Download action 3</a>
                       </td>
                     </tr>
                   </table>
                 </td>
               </tr>
            </mj-raw>       
            <!-- end button 3 -->
	      </mj-column>	      
      </mj-section>
      <mj-raw>
      </div>
      </mj-raw>
      <!-- ./ Two Col Layout -->

      <mj-include path="../includes/master-footer-markup.mjml" />
     
   </mj-body>
